{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"],
      "components/*": ["src/components/*"],
      "containers/*": ["src/containers/*"],
      "utils/*": ["src/utils/*"],
      "assets/*": ["src/assets/*"],
      "styles/*": ["src/styles/*"],
      "services/*": ["src/services/*"],
      "store/*": ["src/store/*"],
      "routes/*": ["src/routes/*"],
      "config/*": ["src/config/*"],
      "views/*": ["src/views/*"],
      "layouts/*": ["src/layouts/*"],
      "models/*": ["src/models/*"],
      "pages/*": ["src/pages/*"],
      "hooks/*": ["src/hooks/*"],
      "locales/*": ["src/locales/*"],
      "typings/*": ["src/typings/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist"]
}