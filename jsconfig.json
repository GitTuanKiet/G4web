{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "assets/*": ["assets/*"],
      "components/*": ["shared/components/*"],
      "layouts/*": ["client/layouts/*"],
      "pages/*": ["client/pages/*"],
      "routes/*": ["routes/*"],
      "stores/*": ["stores/*"],
      "utils/*": ["shared/utils/*"],
      "views/*": ["client/views/*"],
      "apis/*": ["apis/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "dist"]
}
